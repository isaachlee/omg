<%if flash[:errors] %>
<div class='container'>
  <ul>
  <% flash[:errors].each do |error| %>
    <li><%=error%></li>
  <%end %>
  </ul>
</div>
<%end %>

<div class="container">
  <%if current_user  %>
    <h1 class="jumbotron">Logged in as <%=@current_user.username %></h1>
    <a class='popup_form' id='show_edit_user_form' href='/users/<%=current_user.id%>/edit'>Edit User</a>
    <a id='log_out' href='/sessions/<%=current_user.id%>'>Log Out</a>
  <%else  %>
  <a class='popup_form' id='show_new_user_form' href='/users/new'>Create User</a>
  <a class='popup_form' id='show_log_in_form' href='/sessions/new'>Log In</a>
  <%end %>
  <div class="show_form">
  </div>
</div>

<div class = "container">
  <form method = "post" action = "/text">
    <label for = "text"> Original Message: </label>
    <textarea name = "text"> </textarea>
    <input type="submit" class= 'btn btn-info'> </input>
  </form>
</div>


<%if @translated_string %>
<div class = "container">
  <p><%= @translated_string %></p>
</div>
<% end %>